@inherits LayoutComponentBase
@inject ILoginService LoginService
@inject NavigationManager NavigationManager

@if (LoggedIn)
{
    <!-- nav -->
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="navbar-nav">
            <NavLink href="/home" Match="NavLinkMatch.All" class="nav-item nav-link">Home</NavLink>
            <NavLink href="/Logout" class="nav-item nav-link">Logout</NavLink>
        </div>
    </nav>
}

<div class="app-container @(LoggedIn ? "bg-light" : "")">
    <AlertView  />
    @Body
</div>

@code {
    public bool LoggedIn 
    {
        get { return LoginService.User != null; }
    }

}

